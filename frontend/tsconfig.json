{
	"compilerOptions": {
		"lib": ["ES2021"],
		"target": "ES2021",
		"module": "ES2022",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictPropertyInitialization": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"paths": {
			"@/*": ["./*"],
			"@gi/*": ["../types/*"]
		},
		"typeRoots": []
	}
}
